{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es2015",
    "allowJs": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "jsx": "react",
    "jsxFactory": "h",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]
}
